@model Consumer
<script>
function OnSubmitForm(event) 
{
    var 
        pass1 = document.getElementById("pass1").value,
        pass2 = document.getElementById("pass2").value
        ;
        
    if (pass1 !== pass2)
    {
        alert("Password tidak cocok");
        return false;
    }
    return true;
}

</script>
@using (Html.BeginForm("SignUp", "Login" , FormMethod.Post, new { @onsubmit="return OnSubmitForm(event)" })) { 
                @Html.ValidationSummary(true);
                
                <h4>Mendaftar</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pass"></label>
                    <input asp-for="Pass" id="pass1" class="form-control" />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Pass konfirmasi</label>
                    <input id="pass2" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Notel"></label>
                    <input asp-for="Notel" class="form-control" />
                    <span asp-validation-for="Notel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nama"></label>
                    <input asp-for="Nama" class="form-control" />
                    <span asp-validation-for="Nama" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button id="" type="submit" class="btn btn-default">Log in</button>
                </div>
}